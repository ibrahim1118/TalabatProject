@model IEnumerable<UserVm>
@{
    ViewData["Title"] = "Index";
}

<h1>All Users</h1>
<br />

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
        
        <th>@Html.DisplayNameFor(r=>r.UserName)</th>
        <th>@Html.DisplayNameFor(r=>r.DispalyName)</th>
        <th>@Html.DisplayNameFor(r=>r.Email)</th>
        <th>@Html.DisplayNameFor(r=>r.PhoneNumber)</th>
        <th>Roles</th>
        <th>Action</th>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.UserName</td>
                    <td>@role.DispalyName</td>
                    <td>@role.Email</td>
                    <td>@role.PhoneNumber</td>
                    <td>@string.Join(',' ,role.Roles)</td>
                    <td>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@role.Id">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@role.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 p-2 alert-warning">
        <h2>Ther is no Role</h2>
    </div>
}

