@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<h1 class="mt-2">All Role</h1>

<partial name="_AddRole" model="new RoleVM()"/>

@if(Model.Count()>0)
{
   <table class="table table-striped table-hover">
       <thead>
        <th>@Html.DisplayNameFor(r=>r.Id)</th>
        <th>@Html.DisplayNameFor(r=>r.Name)</th>
        <th>Action</th>
       </thead>
       <tbody>
           @foreach(var role  in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td >
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@role.Id">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@role.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 p-2 alert-warning">
        <h2>Ther is no Role</h2>
    </div>
}


